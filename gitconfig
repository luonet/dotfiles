[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = delta

[alias]
	s = status
	co = checkout
	d = diff
[push]
	default = simple
[include]
	path = ~/.gitconfig.user
[interactive]
	diffFilter = delta --color-only
[delta]
	features = line-numbers decorations# navigate
	whitespace-error-style = 22 reverse
[delta "decorations"]
#	commit-style = 232 bold italic "#a4351b"
	commit-style = 232 bold italic red
	commit-decoration-style = 232 red box
	file-style = yellow
	file-decoration-style = bold yellow box
